<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:formula='urn:import:org.activityinfo.ui.client.component.formula'>
    <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
    <ui:with field="icons" type="org.activityinfo.ui.icons.Icons"/>

    <g:HTMLPanel>
        <g:FlowPanel ui:field="conditionPanel"/>
        <div class="row">
            <div class="xs-col-12">
                <formula:CriteriaEditor ui:field="criteria"/>
            </div>
        </div>
        <g:Button ui:field="addButton" addStyleNames="btn btn-primary"/>
    </g:HTMLPanel>
</ui:UiBinder>
